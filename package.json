	"scripts": {
		"test": "ava",
		"start": "node examples/control-gallery.js",
		"start-np": "node examples/node-pad.js",
		"start-core": "node examples/core-api.js",
		"autogypi": "autogypi",
		"node-gyp": "node-gyp",
		"install": "libui-download && autogypi && npm run build",
		"build": "node-gyp configure build",
